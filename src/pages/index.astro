---
import About from '../components/About.astro'
import Contact from '../components/Contact.astro'
import Experience from '../components/Experience.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Project from '../components/Project.astro'
import Video from '../components/Video.astro'

const ytApiKey = import.meta.env.YT_API_KEY
const ytChannelId = import.meta.env.YT_CHANNEL_ID
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta name='”robots”' content='index, follow' />
    <meta
      name='description'
      content='A software Engineer with 5+ years of experience specializing in building scalable, smooth, beautiful and user-friendly interfaces for mobile and desktop devices.'
    />
    <title>Abdur Rahman Robin | Software Engineer III</title>
  </head>
  <body>
    <Header />
    <main class='bg-linear'>
      <Hero />
      <About />
      <Experience />
      <Project />
      <!--
        Don't using the react Video component because of limitted youtube data api quota.
        Since astro makes request on build time, for now I'm using that. Later I will use 
        react component (Although I minimize the request using sessionStorage). 
      -->
      <!-- <Video client:load ytApiKey={ytApiKey} ytChannelId={ytChannelId} /> -->
      <Video />
      <Contact />
      <Footer />
    </main>
  </body>
  <script src='../../node_modules/preline/dist/preline.js'></script>
</html>

<style>
  .bg-linear {
    background: linear-gradient(
      180deg,
      hsl(273, 37%, 93%),
      hsl(273, 37%, 93%),
      #fdfeff
    );
  }
</style>
